@using WebTeploobmen.Data
@model List<Variant>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">Список расчетов</h1>
        <a href="/home/calc/" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Добавить новый расчет
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Высота слоя, м</th>
                    <th>Начальная температура материала, °С</th>
                    <th>Начальная температура газа, °С</th>
                    <th>Скорость газа, м/с</th>
                    <th>Средняя теплоемкость газа, кДж/(м³·К)</th>
                    <th>Расход материалов, кг/с</th>
                    <th>Теплоемкость материалов, кДж/(кг·К)</th>
                    <th>Коэффициент теплоотдачи, Вт/(м³·К)</th>
                    <th>Диаметр аппарата, м</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.height</td>
                        <td>@item.mattemp</td>
                        <td>@item.gaztemp</td>
                        <td>@item.haste</td>
                        <td>@item.gaztepl</td>
                        <td>@item.rashod</td>
                        <td>@item.mattepl</td>
                        <td>@item.koef</td>
                        <td>@item.diametr</td>
                        <td class="text-center">
                            <a href="/home/results/@item.Id" class="btn btn-primary btn-sm me-2">
                                <i class="bi bi-box-arrow-up-right"></i> Открыть
                            </a>
                            <a href="/home/delete/@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Удалить
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Подключение Bootstrap Icons для иконок -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
